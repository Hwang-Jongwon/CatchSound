<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabsub1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="70dp"
            android:clickable="true"
            android:src="@drawable/ic_baseline_mic_24"
            android:visibility="invisible"
            app:backgroundTint="#ffff80"
            app:fabSize="mini" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabsub2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="120dp"
            android:clickable="true"
            android:src="@drawable/ic_baseline_star_24"
            android:visibility="invisible"
            app:backgroundTint="#ffff80"
            app:fabSize="mini" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabsub3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="170dp"
            android:clickable="true"
            android:src="@drawable/ic_baseline_keyboard_24"
            android:visibility="invisible"
            app:backgroundTint="#ffff80"
            app:fabSize="mini" />


        <TextView
            android:id="@+id/sttResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fontFamily="@font/nanum"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="30dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="80dp"

            android:backgroundTint="@color/white"
            android:outlineAmbientShadowColor="@color/white"
            android:src="@drawable/ic_baseline_zoom_in_24"
            app:maxImageSize="35dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:outlineAmbientShadowColor="@color/white"
            android:src="@drawable/ic_baseline_zoom_out_24"
            app:maxImageSize="35dp" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/change1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_hearing_24"
            app:backgroundTint="#ffff80"
            app:maxImageSize="35dp" />

        <TextView
            android:id="@+id/tv1_tts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="185dp"
            android:text="채팅으로 말하기"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv1_db"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="135dp"
            android:text="자주 쓰는 말 모음"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv1_pron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="85dp"
            android:text="발음 교정"
            android:visibility="invisible" />


        app:maxImageSize="35dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sttStart"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_weight="10"
            android:backgroundTint="#ffff80"
            android:text="누르고 말하세요"
            android:textColor="#000000" />

        <Button
            android:id="@+id/voice_set"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"

            android:drawableLeft="@drawable/ic_baseline_more_vert_24"

            >

        </Button>


    </LinearLayout>


</LinearLayout>
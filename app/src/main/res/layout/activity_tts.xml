<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tts_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="텍스트를 음성으로 출력"
            android:fontFamily="@font/nanum"
            android:textColor="#000000"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabsub4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginTop="380dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="170dp"
                android:clickable="true"
                android:src="@drawable/ic_baseline_hearing_24"
                android:visibility="invisible"
                app:backgroundTint="#ffff80"
                app:fabSize="mini" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabsub5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="120dp"
                android:layout_marginLeft="12dp"
                android:clickable="true"
                android:src="@drawable/ic_baseline_star_24"
                android:visibility="invisible"
                app:backgroundTint="#ffff80"
                app:fabSize="mini" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabsub6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="70dp"
                android:layout_marginLeft="12dp"
                android:clickable="true"
                android:src="@drawable/ic_baseline_mic_24"
                android:visibility="invisible"
                app:backgroundTint="#ffff80"
                app:fabSize="mini" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/change2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"

                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_keyboard_24"
                app:backgroundTint="#ffff80"
                app:maxImageSize="35dp" />

            <TextView
                android:id="@+id/tv2_stt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="395dp"
                android:layout_marginLeft="70dp"
                android:visibility="invisible"
                android:text="음성을 텍스트로 보기" />

            <TextView
                android:id="@+id/tv2_db"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="445dp"
                android:layout_marginLeft="70dp"
                android:visibility="invisible"
                android:text="자주 쓰는 말 모음" />

            <TextView
                android:id="@+id/tv2_pron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="495dp"
                android:layout_marginLeft="70dp"
                android:visibility="invisible"
                android:text="발음 교정" />


        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">



        <EditText
            android:id="@+id/txtText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:hint="텍스트를 입력하면 음성이 출력됩니다"
            android:textColor="#000000"
            android:textColorHint="#4D000000"
            android:inputType="text">
            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btnSpeak"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="15dp"
            android:backgroundTint="#ffff80"
            android:drawableRight="@drawable/ic_baseline_send_24" />


    </LinearLayout>


</LinearLayout>